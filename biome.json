{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"ignore": ["dist/*.*"],
		"formatWithErrors": true,
		"indentWidth": 2,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"ignore": ["dist/*.*"],
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"useAltText": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			},
			"style": {
				"useImportType": "error",
				"useExportType": "error"
			},
			"suspicious": {
				"noDoubleEquals": {
					"fix": "safe",
					"level": "error"
				},
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all"
		},
		"linter": {
			"enabled": true
		},
		"jsxRuntime": "reactClassic"
	},
	"overrides": [
		{
			"include": ["**/*.test.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	],
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": ["dist/*.*"],
		"ignoreUnknown": true
	}
}
